# Manual Zsh config sourcing
# Comment out any line to disable that part

# Shell options and core settings
[[ -f "$HOME/.config/zsh/shell" ]] && source "$HOME/.config/zsh/shell"

# Aliases
[[ -f "$HOME/.config/zsh/aliases" ]] && source "$HOME/.config/zsh/aliases"

# Custom functions
[[ -f "$HOME/.config/zsh/functions" ]] && source "$HOME/.config/zsh/functions"

# Prompt configuration (Starship, Powerlevel10k, etc.)
[[ -f "$HOME/.config/zsh/prompt" ]] && source "$HOME/.config/zsh/prompt"

# Initialization scripts (plugins, keybindings, completions, etc.)
[[ -f "$HOME/.config/zsh/init" ]] && source "$HOME/.config/zsh/init"

# Environment variables
[[ -f "$HOME/.config/zsh/envs" ]] && source "$HOME/.config/zsh/envs"

# Input settings (readline, keymaps, etc.)
# [[ -f "$HOME/.config/zsh/inputrc" ]] && source "$HOME/.config/zsh/inputrc"

